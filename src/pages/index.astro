---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
	<Nav />
	<main class="home-container">
		<!-- Hero Section -->
		<section class="hero">
			<div class="hero-content">
				<h1 class="hero-title">Welcome to My Personal Site</h1>
				<p class="hero-subtitle">Creator of simple, tasteful, and modular systems at that work at scale with a little bit of game development.</p>
				<div class="hero-ctas">
					<a href="/work" class="cta-primary">View My Work</a>
					<a href="/contact" class="cta-secondary">Get In Touch</a>
				</div>
			</div>
			<div class="hero-background"></div>
		</section>

		<!-- Featured Projects -->
		<section class="featured-projects">
			<div class="section-header">
				<h2>Featured Projects</h2>
				<p>A selection of recent work showcasing diverse technical skills</p>
			</div>

			<div class="projects-grid">
				<article class="project-card">
					<div class="project-header">
						<h3>Web Link Shortener</h3>
						<span class="year">2024</span>
					</div>
					<p class="project-desc">Basic Webapi using REST APIs to shorten links for the requester.</p>
					<div class="project-tags">
                    <span>Entity Framework Core</span>
                    <span>C#</span>
                    <span>ASP.NET</span>
                    <span>Postgress</span>
					</div>
					<a href="/work" class="project-link">View Details →</a>
				</article>

				<article class="project-card">
					<div class="project-header">
						<h3>Calculator Compilier</h3>
						<span class="year">2024</span>
					</div>
					<p class="project-desc">A basic compilier written in C#. Functions as a calculator but shares concepts with tokenizing string to actions.</p>
					<div class="project-tags">
                    <span>C#</span>
                    <span>Lexers</span>
                    <span>Compilers</span>
					</div>
					<a href="/work" class="project-link">View Details →</a>
				</article>
			</div>

			<div class="view-all">
				<a href="/work" class="view-all-btn">View All Projects</a>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>

	.home-container {
		padding: 0 20px;
	}

	/* Hero Section */
	.hero {
		position: relative;
		min-height: 600px;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		padding-top: 80px;
	}

	.hero-background {
		position: absolute;
		inset: 0;
		background: linear-gradient(135deg, rgba(0, 122, 255, 0.08) 0%, rgba(188, 82, 238, 0.08) 100%);
		z-index: -1;
	}

	.hero-content {
		max-width: 800px;
		text-align: center;
		animation: fadeInUp 0.8s ease-out;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.hero-title {
		font-size: 3.5rem;
		font-weight: 800;
		color: #1d1d1f;
		margin: 0 0 24px 0;
		line-height: 1.2;
		letter-spacing: -1.5px;
	}

	.hero-subtitle {
		font-size: 1.2rem;
		color: #666;
		margin: 0 0 40px 0;
		line-height: 1.8;
		font-weight: 400;
	}

	.hero-ctas {
		display: flex;
		gap: 16px;
		justify-content: center;
		flex-wrap: wrap;
	}

	.cta-primary {
		display: inline-block;
		background: linear-gradient(135deg, #007aff 0%, #0051d5 100%);
		color: white;
		padding: 16px 40px;
		border-radius: 12px;
		text-decoration: none;
		font-weight: 700;
		font-size: 1rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		box-shadow: 0 8px 24px rgba(0, 122, 255, 0.3);
	}

	.cta-primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 12px 32px rgba(0, 122, 255, 0.4);
	}

	.cta-secondary {
		display: inline-block;
		background: white;
		color: #007aff;
		padding: 16px 40px;
		border-radius: 12px;
		text-decoration: none;
		font-weight: 700;
		font-size: 1rem;
		border: 2px solid #007aff;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.cta-secondary:hover {
		background: #007aff;
		color: white;
		transform: translateY(-2px);
	}

	/* Section Header */
	.section-header {
		text-align: center;
		margin-bottom: 80px;
	}

	.section-header h2 {
		font-size: 3rem;
		font-weight: 800;
		color: #1d1d1f;
		margin: 0 0 16px 0;
		letter-spacing: -1px;
	}

	.section-header p {
		font-size: 1.1rem;
		color: #666;
		margin: 0;
		font-weight: 400;
	}

	/* Featured Projects */
	.featured-projects {
		max-width: 1200px;
		margin: 0 auto;
		padding: 100px 20px;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
		gap: 32px;
		margin-bottom: 60px;
	}

	.project-card {
		background: white;
		border: 1px solid #e5e5e7;
		border-radius: 16px;
		padding: 32px;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		display: flex;
		flex-direction: column;
		position: relative;
		overflow: hidden;
	}

	.project-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 3px;
		background: linear-gradient(90deg, #007aff, #bc52ee);
		transform: scaleX(0);
		transform-origin: left;
		transition: transform 0.4s ease;
	}

	.project-card:hover {
		border-color: #e5e5e7;
		box-shadow: 0 20px 40px rgba(0, 0, 0, 0.08);
		transform: translateY(-8px);
	}

	.project-card:hover::before {
		transform: scaleX(1);
	}

	.project-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 16px;
	}

	.project-card h3 {
		font-size: 1.4rem;
		font-weight: 700;
		color: #1d1d1f;
		margin: 0;
		letter-spacing: -0.5px;
	}

	.year {
		color: #999;
		font-size: 0.85rem;
		font-weight: 500;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.project-desc {
		color: #666;
		line-height: 1.8;
		margin: 0 0 20px 0;
		font-size: 0.975rem;
		flex-grow: 1;
	}

	.project-tags {
		display: flex;
		gap: 8px;
		flex-wrap: wrap;
		margin-bottom: 20px;
	}

	.project-tags span {
		background: linear-gradient(135deg, #f5f5f7 0%, #efefef 100%);
		color: #555;
		padding: 5px 14px;
		border-radius: 24px;
		font-size: 0.8rem;
		font-weight: 600;
		border: 1px solid #e5e5e7;
		transition: all 0.3s ease;
	}

	.project-card:hover .project-tags span {
		background: linear-gradient(135deg, #007aff 0%, #0051d5 100%);
		color: white;
		border-color: transparent;
		transform: translateY(-2px);
	}

	.project-link {
		color: #007aff;
		text-decoration: none;
		font-weight: 700;
		transition: all 0.3s ease;
		display: inline-block;
	}

	.project-link:hover {
		color: #0051d5;
		transform: translateX(4px);
	}

	.view-all {
		text-align: center;
	}

	.view-all-btn {
		display: inline-block;
		background: white;
		color: #007aff;
		padding: 14px 40px;
		border-radius: 12px;
		border: 2px solid #007aff;
		text-decoration: none;
		font-weight: 700;
		font-size: 1rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.view-all-btn:hover {
		background: #007aff;
		color: white;
		transform: translateY(-2px);
	}
</style>
