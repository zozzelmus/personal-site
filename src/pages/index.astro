---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import SkillsShowcase from '../components/SkillsShowcase.astro';
import { getFeaturedProjects } from '../data/projects';

const featuredProjects = getFeaturedProjects();
---

<Layout>
	<Nav />
	<main class="home-container">
		<!-- Hero Section -->
		<section class="hero">
			<div class="hero-content">
				<div class="terminal-prompt">
					<span class="prompt-symbol">&gt;</span>
					<span class="prompt-text">Hello, I'm Brandon</span>
					<span class="cursor">_</span>
				</div>
				<h1 class="hero-title">Software Engineer</h1>
				<p class="hero-subtitle">Creator of simple, tasteful, and modular systems that work at scale with a little bit of game development.</p>
				<div class="hero-ctas">
					<a href="/work" class="cta-primary">
						View My Work
					</a>
					<a href="/contact" class="cta-secondary">
						Get In Touch
					</a>
				</div>
			</div>
		</section>

		<!-- Skills Showcase -->
		<SkillsShowcase />

		<!-- Featured Projects -->
		<section class="featured-projects">
			<div class="section-header">
				<div class="section-tag">// featured</div>
				<h2>Projects</h2>
				<p>A selection of recent work showcasing diverse technical skills</p>
			</div>

			<div class="projects-grid">
				{featuredProjects.map((project) => (
					<article class="project-card">
						<div class="card-line-numbers">
							<span>01</span>
							<span>02</span>
							<span>03</span>
							<span>04</span>
						</div>
						<div class="card-content">
							<div class="project-header">
								<h3>{project.title}</h3>
								<span class="year">/* {project.year} */</span>
							</div>
							<p class="project-desc">{project.description}</p>
							<div class="project-tags">
								{project.skills.map((skill) => (
									<span>{skill}</span>
								))}
							</div>
							<a href={project.githubUrl} target="_blank" class="project-link">
								View on GitHub <span class="link-arrow">&rarr;</span>
							</a>
						</div>
					</article>
				))}
			</div>

			<div class="view-all">
				<a href="/work" class="view-all-btn">
					View All Projects
				</a>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.home-container {
		padding: 0 20px;
	}

	/* Hero Section */
	.hero {
		position: relative;
		min-height: 500px;
		display: flex;
		align-items: center;
		justify-content: center;
		overflow: hidden;
		padding-top: 80px;
	}

	.hero-content {
		max-width: 800px;
		text-align: center;
		animation: fadeInUp 0.8s ease-out;
	}

	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.terminal-prompt {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		background: #21262d;
		padding: 8px 20px;
		border-radius: 6px;
		margin-bottom: 24px;
		font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Consolas', monospace;
		border: 1px solid #30363d;
	}

	.prompt-symbol {
		color: #3fb950;
		font-weight: bold;
	}

	.prompt-text {
		color: #79c0ff;
	}

	.cursor {
		color: #3fb950;
		animation: blink 1s step-end infinite;
	}

	@keyframes blink {
		0%, 100% { opacity: 1; }
		50% { opacity: 0; }
	}

	.hero-title {
		font-size: 3.5rem;
		font-weight: 800;
		color: #f0f6fc;
		margin: 0 0 24px 0;
		line-height: 1.2;
		letter-spacing: -1.5px;
		font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Consolas', monospace;
	}

	.hero-subtitle {
		font-size: 1.2rem;
		color: #8b949e;
		margin: 0 0 40px 0;
		line-height: 1.8;
		font-weight: 400;
	}

	.hero-ctas {
		display: flex;
		gap: 16px;
		justify-content: center;
		flex-wrap: wrap;
	}

	.cta-primary {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		background: linear-gradient(135deg, #238636 0%, #2ea043 100%);
		color: white;
		padding: 14px 32px;
		border-radius: 8px;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.95rem;
		font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Consolas', monospace;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		border: 1px solid #238636;
	}

	.cta-primary:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 24px rgba(35, 134, 54, 0.4);
	}

	.cta-icon {
		opacity: 0.7;
	}

	.cta-secondary {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		background: transparent;
		color: #8b949e;
		padding: 14px 32px;
		border-radius: 8px;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.95rem;
		font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Consolas', monospace;
		border: 1px solid #30363d;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.cta-secondary:hover {
		background: #21262d;
		color: #f0f6fc;
		border-color: #8b949e;
		transform: translateY(-2px);
	}

	/* Section Header */
	.section-header {
		text-align: center;
		margin-bottom: 60px;
	}

	.section-tag {
		color: #3fb950;
		font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Consolas', monospace;
		font-size: 0.9rem;
		margin-bottom: 12px;
	}

	.section-header h2 {
		font-size: 2.5rem;
		font-weight: 700;
		color: #f0f6fc;
		margin: 0 0 16px 0;
		letter-spacing: -1px;
		font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Consolas', monospace;
	}

	.section-header p {
		font-size: 1.1rem;
		color: #8b949e;
		margin: 0;
		font-weight: 400;
	}

	/* Featured Projects */
	.featured-projects {
		max-width: 1200px;
		margin: 0 auto;
		padding: 60px 20px 100px;
	}

	.projects-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
		gap: 24px;
		margin-bottom: 60px;
	}

	.project-card {
		background: #161b22;
		border: 1px solid #30363d;
		border-radius: 12px;
		display: flex;
		overflow: hidden;
		transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
	}

	.project-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		height: 2px;
		background: linear-gradient(90deg, #3fb950, #58a6ff);
		transform: scaleX(0);
		transform-origin: left;
		transition: transform 0.4s ease;
	}

	.project-card:hover {
		border-color: #3fb950;
		box-shadow:
			0 0 0 1px rgba(63, 185, 80, 0.3),
			0 16px 32px rgba(0, 0, 0, 0.3);
		transform: translateY(-4px);
	}

	.project-card:hover::before {
		transform: scaleX(1);
	}

	.card-line-numbers {
		display: flex;
		flex-direction: column;
		gap: 6px;
		padding: 24px 12px;
		background: #0d1117;
		border-right: 1px solid #21262d;
		font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Consolas', monospace;
		font-size: 0.75rem;
		color: #484f58;
		text-align: right;
	}

	.card-content {
		padding: 24px;
		flex: 1;
		display: flex;
		flex-direction: column;
	}

	.project-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 12px;
		flex-wrap: wrap;
		gap: 8px;
	}

	.project-card h3 {
		font-size: 1.25rem;
		font-weight: 600;
		color: #f0f6fc;
		margin: 0;
		font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Consolas', monospace;
	}

	.year {
		color: #484f58;
		font-size: 0.8rem;
		font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Consolas', monospace;
	}

	.project-desc {
		color: #8b949e;
		line-height: 1.7;
		margin: 0 0 16px 0;
		font-size: 0.9rem;
		flex-grow: 1;
	}

	.project-tags {
		display: flex;
		gap: 8px;
		flex-wrap: wrap;
		margin-bottom: 16px;
	}

	.project-tags span {
		background: #21262d;
		color: #79c0ff;
		padding: 4px 12px;
		border-radius: 6px;
		font-size: 0.75rem;
		font-weight: 500;
		font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Consolas', monospace;
		border: 1px solid #30363d;
		transition: all 0.3s ease;
	}

	.project-card:hover .project-tags span {
		background: #238636;
		color: #ffffff;
		border-color: #2ea043;
	}

	.project-link {
		color: #3fb950;
		text-decoration: none;
		font-weight: 600;
		font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Consolas', monospace;
		font-size: 0.85rem;
		transition: all 0.3s ease;
		display: inline-flex;
		align-items: center;
		gap: 4px;
	}

	.project-link:hover {
		color: #58a6ff;
	}

	.link-arrow {
		transition: transform 0.3s ease;
	}

	.project-link:hover .link-arrow {
		transform: translateX(4px);
	}

	.view-all {
		text-align: center;
	}

	.view-all-btn {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		background: #21262d;
		color: #8b949e;
		padding: 14px 32px;
		border-radius: 8px;
		border: 1px solid #30363d;
		text-decoration: none;
		font-weight: 600;
		font-size: 0.95rem;
		font-family: 'JetBrains Mono', 'Fira Code', 'SF Mono', 'Consolas', monospace;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.btn-prefix {
		color: #3fb950;
	}

	.view-all-btn:hover {
		background: #30363d;
		color: #f0f6fc;
		border-color: #8b949e;
		transform: translateY(-2px);
	}

	@media (max-width: 768px) {
		.hero-title {
			font-size: 2.5rem;
		}

		.projects-grid {
			grid-template-columns: 1fr;
		}

		.card-line-numbers {
			display: none;
		}
	}
</style>
