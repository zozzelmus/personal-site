---
import favicon from '../assets/favicon.png';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/png" href={favicon.src} />
		<meta name="generator" content={Astro.generator} />
		<title>Brandon Parker Technology</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--bg-color: rgba(247, 246, 246, 0.7);
		--border-color: rgba(255, 255, 255, 0.2);
		--accent: #007aff;
	}

	html,
	body {
		margin: 0;
		padding: 0;
		width: 100%;
		display: flex;
		flex-direction: column;
		font-family: Inter, Roboto, 'Helvetica Neue', 'Arial Nova', 'Nimbus Sans', Arial, sans-serif;
		background-color: var(--bg-color);
	}

	body > header {
		flex-shrink: 0;
		width: 100%;
		background-color: var(--bg-color);
		position: sticky;
		top: 0;
		z-index: 1000;
	}

	body > main {
		flex: 1;
		width: 100%;
	}

	body > footer {
		flex-shrink: 0;
		width: 100%;
		margin-top: auto;
	}
</style>
